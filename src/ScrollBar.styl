.vertical-scroll
	position absolute
	top 0
	right 0
	width 5px
	opacity 0
	transition opacity 0.4s linear

.horizontal-scroll
	position absolute
	bottom 0
	left 0
	height 5px
	opacity 0
	transition opacity 0.4s linear

.inner
	position relative
	overflow hidden
	height 100%

.slider__vertical
	position relative
	width 100%
	border-radius 10px
	background rgba(121, 121, 121, 0.8)
	transform translate(0, 0)
	will-change transform
	/* transition: transform 0.2s */

.slider__horizontal
	position relative
	height 100%
	border-radius 10px
	background rgba(121, 121, 121, 0.8)
	transform translate(0, 0)
	will-change transform
	/* transition: transform 0.2s */

.invisible
	opacity 0

.visible
	background-color rgba(0, 0, 0, 0)
	opacity 1
	transition opacity 0.1s linear

.mousein
	background-color rgba(0, 0, 0, 0.1)
	opacity 1

.showArea
	position relative
	transform translate(0, 0)
	will-change transform

.scrollbar__click
	transition transform 0.2s